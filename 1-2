# arctan(x) 의 그래프를 구하시오.

import numpy as np
import matplotlib.pyplot as plt

x = np.arange(-10, 10, 0.1)
y = np.arctan(x)

plt.plot(x, y, '-b')

plt.title('y = arctan(x)', color = 'b')

plt.xlabel('X')
plt.ylabel('arctan(x)')
plt.grid()

#x축 y축 표시
plt.axhline(y = 0, color = 'k')
plt.axvline(x = 0, color = 'k')
plt.show()
